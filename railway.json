{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "RAILPACK",
        "buildCommand": "cd apps/backend && go build -o main ./cmd/api"
    },
    "deploy": {
        "startCommand": "./apps/backend/main",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}